

<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
<div class="form-wrapper">
  <h1>ログイン</h1>
  <form>
    <div class="form-item">
      <%= f.email_field :email, autofocus: true, placeholder: "メールアドレス" %>
    </div>
    <div class="form-item">
    <%= f.password_field :password, autocomplete: "current-password", placeholder: "パスワード" %>
    </div>
   <% if devise_mapping.rememberable? %>
    <div class="field">
      <%= f.check_box :remember_me %>
      <%= f.label :remember_me %>
    </div>
   <% end %>
    <div class="button-panel">
      <input type="submit" class="button" title="Sign In" value="ログイン"></input>
    </div>
  </form>
  <div class="form-footer">
    <p><a href="/users/sign_up">新規登録はこちら</a></p>
    <p><a href="/users/password/new">パスワードを忘れましたか?</a></p>
  </div>
</div>
<% end %>


