<h3>Posts</h3>

<table>
<thead>
<tr>
<th>title</th>
<th>body</th>
<th></th>
</tr>
</thead>

<tbody>
<% @posts.each do |post| %>
<tr>
<td>
<%= post.title %>
</td>
<td>
<%= post.caption %>
</td>
<td>
<%= link_to "show", post_path(post.id) %>
<%= link_to "edit", edit_post_path(post.id) %>

</td>
</tr>
<% end %>
</tbody>
</table>

<h1>New Post</h1>

<%= form_with model: @post, local:true do |f| %>


<h4>タイトル</h4>
    <%= f.text_field :title %>


  <h4>画像</h4>
  <%= f.attachment_field :image%>


  <div class="field">
    <%= f.text_area :caption %>
  </div>

  <div class="actions">
    <%= f.submit '投稿' %>
  </div>
<% end %>
<%= link_to 'Back', posts_path %>