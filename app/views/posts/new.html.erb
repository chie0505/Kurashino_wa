
<div class="d-flex flex-column align-items-center mt-3">
  <div class="col-xl-5 col-lg-8 col-md-10 col-sm-11 post-card">
   <div class="card-wrap">
    <div class="card">
      <div class="card-header">
        投稿画面
      </div>
      <div class="card-body">
        <%= form_with model: @post, class: "upload-images p-0 border-0" do |f| %>
          <div class="form-group row mt-2">
            <div class="col-auto pr-0">
              <%= image_tag avatar_url(current_user), class: "post-profile-icon" %>
            </div>
            <div class="col pl-0">
              <%= f.text_field :title,  class: 'form-control' ,placeholder: "タイトル", rows: "3" %>
              <%= f.text_area :caption, class: "form-control border-0", placeholder: "暮らしの知恵を投稿", rows: "3" %>

            </div>
          </div>
          <div class="mb-3">

           <%= f.attachment_field :post_image%>

          </div>

          <%= f.submit "投稿する", class: "btn btn-primary btn-block"%>
        <% end %>
      </div>
    </div>
  </div>
  </div>
</div>