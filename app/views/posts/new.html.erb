<h1>New Post</h1>

<%= form_with model: @post, local:true do |f| %>


<h4>タイトル</h4>
    <%= f.text_field :title %>


  <h4>画像</h4>
  <%= f.attachment_field :post_image%>


  <div class="field">
    <%= f.text_area :caption %>
  </div>

  <div class="actions">
    <%= f.submit '投稿' %>
  </div>
<% end %>
<%= link_to 'Back', posts_path %>